---
import Container from "./Container.astro";
import Frame from "./Frame.astro";
import { cn } from "@lib/utils";
import { button } from "@tailus/themer-button";
---

<div class="relative">
  <div
    aria-hidden
    class="opacity-0 dark:opacity-35 absolute [background-image:radial-gradient(theme(colors.gray.500),transparent_50%)] top-0 w-[1000px] z-10 h-[800px] left-1/2 -translate-x-1/2 -translate-y-1/3 pointer-events-none"
  >
  </div>
  <Container>
    <div class="relative">
      <div class="mt-6 m-auto space-y-6 md:w-8/12 lg:w-7/12">
        <h2
          class="text-center text-4xl font-normal text-gray-800 dark:text-white md:text-5xl"
        >
          Request early access
        </h2>
        <p
          class="text-center font-thin text-lg text-gray-600 dark:text-gray-300"
        >
          We built the world's first cognitive city data mesh. What can we build
          with you?
        </p>
        <div>
          <div class="relative mt-2 flex items-center">
            <input
              type="text"
              name="search"
              id="search"
              class="block w-full h-16  rounded-full border-0 py-1.5 pr-14 text-white shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
            />
            <div class="absolute inset-y-0 right-0 flex py-1.5 pr-1.5">
              <button
                class="bg-white min-w-24 hover:bg-gray-300 text-black font-bold py-2 px-4 rounded-full"
              >
                <a href="" class=""> Join </a>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</div>
