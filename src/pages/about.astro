---
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
import Layout from "../layouts/Base.astro";
import * as about from "../content/aboutus.md";
import{Content as DataContent} from "../content/aboutus.md";
---

<style>
  .getstarted-rectangle {
    background: url("/public/getstarted.svg");
    background-blend-mode: screen, normal;
    background-size: cover;
    background-position: center;
  }
</style>

<Layout title="meshX">
  <Navigation />
  <main class="bg-[#242526] font-montserrat">
    <div
      class="max-w-7xl mx-auto mt-16 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-1 lg:grid-cols-1 gap-4 p-4 text-gray-200"
    >
      <h1>
        {about.frontmatter.title}
      </h1>
        <DataContent />
    </div>
    <Footer />
  </main>
</Layout>
